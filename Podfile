# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Weather' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Weather
  pod 'Alamofire',  '~> 4.5'
  pod 'SnapKit',    '~> 4.0'
  
  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'

  pod 'MJRefresh', '~> 3.1.15'
  pod 'ForecastIO', '~> 5.0.0'
  
  # Pods for tools
  pod 'R.swift',    '~> 4.0'

  target 'WeatherTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'RxBlocking',   '~> 4.0'
    pod 'RxTest',       '~> 4.0'
  end

  target 'WeatherUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
